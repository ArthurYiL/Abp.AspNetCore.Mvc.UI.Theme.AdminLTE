@using Volo.Abp.AspNetCore.Mvc.UI.Theme.AdminLTE.Themes.AdminLTE.Components.Toolbar.LanguageSwitch
@model LanguageSwitchViewComponentModel
<li class="dropdown">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown">@Model.CurrentLanguage.DisplayName <span class="caret"></span></a>
    <ul class="dropdown-menu" role="menu">
        @foreach (var language in Model.OtherLanguages)
        {
            <li><a href="/Abp/Languages/Switch?culture=@(language.CultureName)&uiCulture=@(language.UiCultureName)&returnUrl=@Context.Request.Path">@language.DisplayName</a></li>
        }
    </ul>
</li>